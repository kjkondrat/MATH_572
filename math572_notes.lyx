\end_layout

\begin_layout Standard
Take a Taylor series expansion of 
\begin_inset Formula $u(x+h)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
u(x+h)=u(x)+hu^{'}(x)+\frac{h^{2}}{2!}u^{''}(x)+...\label{eq:01/07/16 taylor expansion of u(x+h)}
\end{equation}

\end_inset

and of 
\begin_inset Formula $u(x-h)$
\end_inset


\begin_inset Formula 
\begin{equation}
u(x-h)=u(x)-hu^{'}(x)+\frac{h^{2}}{2!}u^{''}(x)+...\label{eq:01/07/16 taylor expansion of u(x-h)}
\end{equation}

\end_inset

From Eqn.
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand ref
reference "eq:01/07/16 taylor expansion of u(x+h)"

\end_inset

 we get:
\begin_inset Formula 
\begin{equation}
D_{+}u(x)=\frac{u(x+h)-u(x)}{h}=u^{'}(x)+\frac{h^{2}}{2!}u^{''}(x)+...
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
u^{'}(x)=D_{+}u(x)-\frac{h^{2}}{2!}u^{''}(x)+...
\end{equation}

\end_inset


\begin_inset Formula 
\begin{equation}
u^{'}(x)=D_{+}u(x)+\mathcal{O}(h)
\end{equation}

\end_inset

and from Eqn.
\begin_inset space ~
\end_inset


\begin_inset CommandInset ref
LatexCommand ref
reference "eq:01/07/16 taylor expansion of u(x-h)"

\end_inset

 we get:
\begin_inset Formula 
\begin{equation}
D_{-}u(x)=\frac{u(x)-u(x-h)}{h}=u^{'}(x)-\frac{h^{2}}{2!}u^{''}(x)+....,
\end{equation}

\end_inset

therfore 
\begin_inset Formula 
\begin{equation}
u^{'}(x)=D_{-}u(x)+\mathcal{O}(h).
\end{equation}

\end_inset

Then we have 
\begin_inset Formula 
\begin{equation}
D_{0}u(x)=\frac{u(x+h)-u(x-h)}{2h}=u^{'}(x)+2\cdot\frac{h^{3}}{3!\cdot2h}u^{'''}(x)+...=u^{'}(x)+\frac{h^{2}}{3!}u^{'''}(x)+...,
\end{equation}

\end_inset

therfore we have 
\begin_inset Formula 
\begin{equation}
u^{'}(x)=D_{0}u(x)+\mathcal{O}(h^{2}),
\end{equation}

\end_inset

which is second order accurate.
 This is also known as a center difference scheme.
 Deriving finite difference formulas.
